<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 800">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4d80e4;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="grad2" x1="100%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#a866ee;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#36d1dc;stop-opacity:1" />
    </linearGradient>
  </defs>
  <g>
    <!-- Left spiral -->
    <path d="M 200,400 C 200,300 300,200 400,200 C 500,200 600,300 600,400 C 600,500 500,600 400,600 C 300,600 200,500 200,400 Z" fill="url(#grad1)" transform="rotate(15, 400, 400)">
      <animateTransform attributeName="transform" type="rotate" from="15 400 400" to="375 400 400" dur="20s" repeatCount="indefinite" />
    </path>
    <!-- Right spiral -->
    <path d="M 600,400 C 600,300 500,200 400,200 C 300,200 200,300 200,400 C 200,500 300,600 400,600 C 500,600 600,500 600,400 Z" fill="url(#grad2)" transform="rotate(-15, 400, 400)">
      <animateTransform attributeName="transform" type="rotate" from="-15 400 400" to="-375 400 400" dur="20s" repeatCount="indefinite" />
    </path>
  </g>
</svg>